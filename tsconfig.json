{
    "compilerOptions": {
        "removeComments": true,
        "noImplicitAny": false,
        "noEmitOnError": true,
        "module": "commonjs",
        "target": "es5",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "rootDir": ".",
        "outDir": "dist",
	"typeRoots": ["node_modules/@types"],
        "types": [
            "node",
            "jasmine"
        ],
        "lib": [
            "dom",
            "es2015"
        ]
    },
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true
    },
    "angularCompilerOptions": {
        "strictMetadataEmit": true
    },
    "files": [
        "./src/ng2-select.module.ts"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*-ngfactory.ts",
        "**/*.spec.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
