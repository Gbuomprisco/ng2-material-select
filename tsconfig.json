{
  "compilerOptions": {
    "removeComments": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "dist"
  },
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true
  },
  "files": [
    "typings/index.d.ts",
    "src/ng2-select.module.ts",
    "index.ts"
  ],
  "exclude": [
    "typings/main.d.ts",
    "typings/main",
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
